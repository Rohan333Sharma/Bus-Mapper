<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeedbackActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:text="@string/feedback"
        android:textSize="25sp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_back_arrow"
        android:drawablePadding="30dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        android:id="@+id/title_textView"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title_textView"
        android:textSize="18sp"
        android:paddingHorizontal="20dp"
        android:text="@string/your_name"
        android:id="@+id/name_textView"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/name_textView"
        android:background="@drawable/rounded_stroke_black"
        android:layout_gravity="center_vertical"
        android:padding="10dp"
        android:id="@+id/name_editText"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name_editText"
        android:textSize="18sp"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:text="Subject"
        android:id="@+id/subject_textView"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/subject_textView"
        android:background="@drawable/rounded_stroke_black"
        android:layout_gravity="center_vertical"
        android:padding="10dp"
        android:id="@+id/subject_edittext"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/subject_edittext"
        android:textSize="18sp"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:text="Description*"
        android:id="@+id/description_textView"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="5"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/description_textView"
        android:background="@drawable/rounded_stroke_black"
        android:layout_gravity="center_vertical"
        android:padding="10dp"
        android:id="@+id/description_editText"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/description_editText"/>

</androidx.constraintlayout.widget.ConstraintLayout>